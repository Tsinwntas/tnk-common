{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "{TNK_MODULE}": {
      "projectType": "library",
      "root": "projects/{TNK_MODULE}",
      "sourceRoot": "projects/{TNK_MODULE}/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/{TNK_MODULE}/tsconfig.lib.prod.json",
            "project": "projects/{TNK_MODULE}/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/{TNK_MODULE}/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/{TNK_MODULE}/src/test.ts",
            "tsConfig": "projects/{TNK_MODULE}/tsconfig.spec.json",
            "karmaConfig": "projects/{TNK_MODULE}/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/{TNK_MODULE}/tsconfig.lib.json",
              "projects/{TNK_MODULE}/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "tnk-{TNK_MODULE}",
  "cli": {
    "analytics": false
  }
}